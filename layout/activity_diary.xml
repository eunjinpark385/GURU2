<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/date"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_diary_image"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_diary_edtDate"
        tools:layout_editor_absoluteX="163dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/activity_diary_edtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="년 월 일"
        android:inputType="date"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="132dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/activity_diary_edtWeather"
        android:layout_width="82dp"
        android:layout_height="45dp"
        android:layout_marginStart="224dp"
        android:ems="10"
        android:hint="날씨"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/activity_diary_edtDate"
        tools:layout_editor_absoluteY="132dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/activity_diary_edtText"
        android:layout_width="314dp"
        android:layout_height="234dp"
        android:layout_marginBottom="240dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent" />



    <EditText
        android:id="@+id/activity_diary_edtTitle"
        android:layout_width="310dp"
        android:layout_height="53dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="제목"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/activity_diary_edtText"
        tools:layout_editor_absoluteX="52dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activity_diary_TextView"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        android:text="오늘의 자신을 칭찬해주세요!"
        android:textColor="#554747"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_diary_edtText2"
        tools:layout_editor_absoluteX="51dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/activity_diary_edtText2"
        android:layout_width="314dp"
        android:layout_height="155dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_diary_btnSave"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:text="저장"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="691dp" />
</androidx.constraintlayout.widget.ConstraintLayout>