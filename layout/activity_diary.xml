<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:padding="16dp" >

    <ImageView
        android:id="@+id/activity_diary_image"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginLeft="140dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <EditText
        android:id="@+id/activity_diary_edtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="년 월 일"
        android:inputType="date"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/activity_diary_edtWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="4"
        android:hint="날씨"
        android:layout_marginLeft="40dp"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>
</LinearLayout>

    <EditText
        android:id="@+id/activity_diary_edtTitle"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="제목"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/activity_diary_edtText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"/>



    <TextView
        android:id="@+id/activity_diary_TextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="오늘의 자신을 칭찬해주세요!"
        android:textColor="#554747"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/activity_diary_edtText2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/activity_diary_btnSave"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="저장"
        android:layout_gravity="end"/>
</LinearLayout>
