<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_badge_DL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BadgeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_badge_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/activity_badge_llInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_badge_tb">

            <ImageView
                android:id="@+id/activity_badge_mascotImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_main_character" />

            <TextView
                android:id="@+id/activity_badge_mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/activity_badge_info"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_activity_emotion_statistics_textview"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/activity_badge_info2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_badge_llInfo">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_badge_3daysImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/badge_3days" />

                    <TextView
                        android:id="@+id/activity_badge_3daysTitle"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_badge_3daysTitle"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_badge_3daysText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/activity_badge_3days"
                    android:textColor="@color/activity_badge_tvTextColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_badge_1weekImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/badge_starter" />

                    <TextView
                        android:id="@+id/activity_badge_1weekTitle"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_badge_7daysTitle"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_badge_1weekText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/activity_badge_7days"
                    android:textColor="@color/activity_badge_tvTextColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_badge_21daysImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/badge_junior" />

                    <TextView
                        android:id="@+id/activity_badge_21daysTitle"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_badge_21daysTitle"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_badge_21daysText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/activity_badge_21days"
                    android:textColor="@color/activity_badge_tvTextColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_badge_66daysImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/badge_senior" />

                    <TextView
                        android:id="@+id/activity_badge_66daysTitle"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_badge_66daysTitle"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_badge_66daysText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/activity_badge_66days"
                    android:textColor="@color/activity_badge_tvTextColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_badge_100daysImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/badge_master" />

                    <TextView
                        android:id="@+id/activity_badge_100daysTitle"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_badge_100daysTitle"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_badge_100daysText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/activity_badge_100days"
                    android:textColor="@color/activity_badge_tvTextColor" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/activity_badge_NV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu" />
</androidx.drawerlayout.widget.DrawerLayout>